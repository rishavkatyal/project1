<html >
<head>
    <script src="https://kit.fontawesome.com/d1e9d1ba92.js" crossorigin="anonymous"></script>  
    <title>
        <%= locals.title %>
    </title>
    <script src="https://kit.fontawesome.com/d1e9d1ba92.js" crossorigin="anonymous"></script>   
    <script src="https://kit.fontawesome.com/d1e9d1ba92.js" crossorigin="anonymous"></script>
        
    
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>
    <h1 id="page-heading">
        <i class="fas fa-address-book"></i>
    <div id="outer">
        <div id="inner">
    <h1 id='page-heading'>
        <i class="far fa-clipboard"></i>
        ToDo App
    </h1>
    <form id="new-todo-task" action="/addtask" method="POST">
        <input type="text" name="description" placeholder="description. what do you need to do?" required>
        <input type="text" name="phone" placeholder="Enter Phone Number" required>
        <input type="date" name="date" placeholder="DueDate" required>
        
      
        <div>
            <select  name="category" placeholder="chose a category" required>
                <option value="" disabled selected hidden>Choose a category</option>
                <option>Personal</option>
                <option>work</option>
                <option>school</option>
                <option>cleaning</option>
                <option>other</option>
                </select>
            </div>
        
        <div>
            <button type="submit">Add Task</button>
            </div>
        
    </form>
    <div id="contacts-list-container">
    <div>
       

            <% for(let i of todo_list) { %>
            <div class="contact">
                <section>
                <li id="">
                <div class="">
                    <p><%= i.description %></p>
                    <p><%= i.date %></p>
                    <p><%= i.category %></p>
                </div>  
                   
                </div> 
                <div class="delete-button">
                    <a href="/delete-todo/?id=<%=i.id %>">
                        <i class="fas fa-window-close"></i>
                   
                    </a>
                </div>
            </div>
        </section>
            <% } %>
        
    </div>
</div>
</div>
</body>
</html> 